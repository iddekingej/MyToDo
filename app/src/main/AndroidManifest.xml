<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.elaya.mytodo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ProjectActivity"
            android:label="@string/title_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditProjectActivity"
            android:label="@string/title_activity_edit_project"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TodoActivity"
            android:label="@string/title_activity_todo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditToDoActivity"
            android:label="@string/title_activity_edit_todo"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".StatusActivity"
            android:label="@string/title_activity_status"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditStatusActivity"
            android:label="@string/title_activity_edit_status"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HelpActivity"
            android:label="@string/title_activity_help"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SettingsEditor"
            android:label="@string/title_settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowTodo"
            android:label="@string/title_show_todo"
            android:theme="@style/AppTheme.NoActionBar"
            />
    </application>

</manifest>